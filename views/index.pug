doctype html
html
  head
    title Chat App
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='static/css/style.css')
    script(src='http://code.jquery.com/jquery-3.3.1.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body
    .container
      .row.top
        if err
          .alert.alert-danger.error
            strong Error!
            | #{" " +err}
        .col-xs-6-col-md-offset-2
            .logo-container
                img.logo(src="img/logo.jpg")
                .row
                    .col-xs-10.col-xs-offset-1.col-md-4.col-md-offset-4
                        form(action="/", method="POST")
                            .form-group
                                input#name.form-control(type='text', name="user", placeholder="Username")
                            .form-group
                                input#name.form-control(type='password', name="password", placeholder="Password")
                            button.btn.btn-primary(type='submit', style="width: 100%; margin-bottom: 8px") Chat
                            a.btn.btn-success(href='/signup', style="width: 100%;") Signup

